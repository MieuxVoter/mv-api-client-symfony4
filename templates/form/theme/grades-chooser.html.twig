{% use 'form/theme/spectre.html.twig' %}


{%- block form_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <div class="form-group">
        <div class="col-12">
            {{- form_label(form) -}}
        </div>
        <div class="col-12">
            {{- form_widget(form, widget_attr) -}}
        </div>
        {{- form_errors(form) -}}
        {{- form_help(form) -}}
    </div>
{%- endblock form_row -%}
